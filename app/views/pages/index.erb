<script>

    $(document).ready(function () {

        var previewSegment = $('#preview-segment');
        previewSegment.html('<%=@template.content.html_safe%>');


        $('.accordion').accordion({
            onOpening: function () {

                var pageId = $(this).find('#pageid').attr('data-value');

                $.ajax({
                    type: 'GET',
                    url: 'appendPage',
                    data: {
                        'pageId': pageId
                    },
                    success: function (result) {
                        $('.page-area').html(result.content);
                    },
                    error:function (error) {
                        alert(error.message)
                    }
                })
            }
        });
    })

    function appendArticle(articleId, addBtn) {
        $(addBtn).toggleClass('add check');

        var articleArea = $(addBtn).closest('.four.wide').siblings().find('.article-area');
        if($(addBtn).attr('class') == 'circle icon check'){
            $.ajax({
                type: 'GET',
                url: 'appendArticle',
                dataType: 'json',
                data:{
                    'articleId': articleId,
                },
                success:function (result) {
                    articleArea.append(
                        '<div '
                        + 'id="'+articleId+'"'
                        + '></div>'
                    );
                    articleArea.find('#'+articleId).append(result.content);
                },
                error:function (error) {
                    alert("error");
                }
            })
        }else{
            articleArea.find('#'+articleId).remove();
        }

    }

