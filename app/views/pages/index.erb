    function preview(id, pageId) {
        var articleIds = ($('#' + id).find('a.transition')).map(function(){return $(this).attr("data-value");}).get();

        $.ajax({
            type: 'GET',
            url: 'previewajax',
            dataType: 'json',
            data: {
                'templateId' : <%=@template.id%>,
